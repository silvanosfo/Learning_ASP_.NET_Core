<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Equipas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Equipas.styles.css" asp-append-version="true" />
</head>
<style>
nav ul li a:hover {
    font-weight: bold;
    background-color: #e7e7e7;
    border-radius: 5px;
}

nav ul li button:hover {
    font-weight: bold;
    background-color: #e7e7e7;
    border-radius: 5px;
}
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Equipas" asp-action="Index">Equipas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Membroes" asp-action="Index">Membros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Linq" asp-action="Linq">LINQ</a>
                        </li>
                         
                        <li class="dropdown">
                            <button type="button" class="btn btn-group-sm dropdown-toggle" data-bs-toggle="dropdown">
                                Outros
                            </button>
                            <ul class="dropdown-menu">
                                <li class="nav-item"><a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="ListagemEquipas" asp-action="ListagemEquipas">Listagem Equipas</a></li>
                                <li class="nav-item"><a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="EquipasPorModel" asp-action="EquipasPorModel">Equipas Por Model</a></li>
                                <li class="nav-item"><a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Clientes" asp-action="Index">Data Annotations </a></li>
                            </ul>
                         </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recolonizar" asp-action="Index">Recolonizar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

